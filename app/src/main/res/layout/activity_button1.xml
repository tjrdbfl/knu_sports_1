<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Button1"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음 버튼 중 1개를 고르세요"
        android:background="#F8C0BC"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/swimming"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/swimming"
                android:text="수영(swimming)"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textColor="#000000"
                android:textSize="11dp"
                />
            <Button
                android:id="@+id/health"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/gym"
                android:text="헬스(health)"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textColor="#000000"
                android:textSize="11dp"
                />
            <Button
                android:id="@+id/yoga"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/yoga"
                android:text="요가(yoga)"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textColor="#000000"
                android:textSize="11dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pilates"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/pilates"
                android:text="필라테스(pilates)"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#FBFBFB"
                android:textSize="11dp"/>
            <Button
                android:id="@+id/golf"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/golf"
                android:text="골프(golf)"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textSize="11dp"/>
            <Button
                android:id="@+id/tennis"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/tennis"
                android:text="테니스(tennis)"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textSize="11dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/racket"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="라켓볼(racket)"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:drawableTop="@drawable/racket"
                android:backgroundTint="#FBFBFB"
                android:textSize="11dp"/>
            <Button
                android:id="@+id/dance"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="댄스(dance)"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/dance"
                android:textStyle="bold"
                android:backgroundTint="#FBFBFB"
                android:textSize="11dp"/>

            <Button
                android:id="@+id/badminton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#FBFBFB"
                android:textColor="#000000"
                android:drawableTop="@drawable/badminton"
                android:text="배드민턴(badminton)"
                android:textStyle="bold"
                android:textSize="11dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>